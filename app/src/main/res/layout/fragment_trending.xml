<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.TrendingFragment">

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/lv_country_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select your Country"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textSize="22dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:singleLine="true"
                app:chipSpacingHorizontal="20dp"
                app:singleSelection="true">


                <com.google.android.material.chip.Chip
                    android:id="@+id/c_india"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="India"
                    android:textSize="16dp"
                    android:padding="10dp"
                    android:checkable="true"
                    app:chipStrokeColor="@android:color/darker_gray"
                    app:chipStrokeWidth="1dp"
                    android:textStyle="bold"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/c_usa"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USA"
                    android:textSize="16dp"
                    android:padding="10dp"
                    android:checkable="true"
                    app:chipStrokeColor="@android:color/darker_gray"
                    app:chipStrokeWidth="1dp"
                    android:textStyle="bold"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/c_uk"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UK"
                    android:textSize="16dp"
                    android:padding="10dp"
                    android:checkable="true"
                    app:chipStrokeColor="@android:color/darker_gray"
                    app:chipStrokeWidth="1dp"
                    android:textStyle="bold"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/c_russia"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Russia"
                    android:textSize="16dp"
                    android:padding="10dp"
                    android:checkable="true"
                    app:chipStrokeColor="@android:color/darker_gray"
                    app:chipStrokeWidth="1dp"
                    android:textStyle="bold"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/c_france"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="France"
                    android:textSize="16dp"
                    android:padding="10dp"
                    android:checkable="true"
                    app:chipStrokeColor="@android:color/darker_gray"
                    app:chipStrokeWidth="1dp"
                    android:textStyle="bold"/>



            </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="0.2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categories"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textSize="22dp"/>


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_health"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#AF7AC5"
                        android:layout_margin="5dp"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        app:cardCornerRadius="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Health"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:textSize="22dp"
                            android:padding="20dp"/>


                    </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_entertainment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#FFC300"
                    android:layout_margin="5dp"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Entertainment"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textSize="22dp"
                        android:padding="20dp"/>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_technology"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#FF5733 "
                    android:layout_margin="5dp"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Technology"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textSize="22dp"
                        android:padding="20dp"/>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:visibility="gone"
                    android:id="@+id/cv_business"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#C70039"
                    android:layout_margin="5dp"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Business"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textSize="22dp"
                        android:padding="20dp"/>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_science"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#900C3F"
                    android:layout_margin="5dp"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Science"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textSize="22dp"
                        android:padding="20dp"/>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_sports"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorPrimary"
                    android:layout_margin="5dp"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sports"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textSize="22dp"
                        android:padding="20dp"/>


                </androidx.cardview.widget.CardView>



            </LinearLayout>

        </HorizontalScrollView>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.7">

        <TextView
            android:id="@+id/tv_title_dashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trending"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_trending"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>




</LinearLayout>